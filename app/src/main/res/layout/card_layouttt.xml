<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardBackgroundColor="#ECA46D"
    app:cardCornerRadius="30dp"
    app:cardElevation="25dp"
    app:contentPadding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/textTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="#0B0707"
            android:textSize="34sp"
            android:textStyle="bold"
            tools:text="Titulo da Tarefa" />

        <TextView
            android:id="@+id/textDescr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="#000000"
            android:textSize="24sp"
            tools:text="Descrição" />

        <TextView
            android:id="@+id/textResp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="#000000"
            android:textSize="24sp"
            tools:text="Responsalvel" />

        <TextView
            android:id="@+id/textData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="#000000"
            android:textSize="24sp"
            tools:text="Data" />

        <Switch
            android:id="@+id/switchCardAtivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:minHeight="48dp"
            android:textColor="#000000"
            android:textSize="24sp"
            tools:text="Em Andamento" />

        <TextView
            android:id="@+id/textCat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="#000000"
            android:textSize="24sp"
            tools:text="Categoria" />

        <Button
            android:id="@+id/buttonDel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#FF6F00"
            android:text="Deletar tarefa"
            android:textSize="16sp"
            app:cornerRadius="50dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>